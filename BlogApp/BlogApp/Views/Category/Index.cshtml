@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Kategoriler";
}

<h2 class="mb-4">Kategoriler</h2>

<a asp-action="Create" class="btn btn-success mb-3">Yeni Kategori Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm" onclick="return confirm('Emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

