@using BlogApp.Models.Services.ViewModels
@model CreateBlogViewModel

@{
    ViewData["Title"] = "Yeni Blog Oluştur";
}

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}

<h2 class="text-center mb-4">Yeni Blog Oluştur</h2>

<div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="card shadow rounded-4 border-0">
            <div class="card-body p-4">
                <form asp-action="Create" method="post" asp-controller="Blog">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-semibold"></label>
                        <input asp-for="Title" class="form-control" placeholder="Blog başlığı giriniz" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label fw-semibold"></label>
                        <textarea asp-for="Content" class="form-control" rows="6" placeholder="İçeriği yazınız..."></textarea>
                        <span asp-validation-for="Content" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label fw-semibold"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="Model.CategoryList">
                            <option value="">Kategori seçiniz</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label fw-semibold">Görsel URL</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="Görsel URL’si giriniz (opsiyonel)" />
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Yayınlanma Tarihi</label>
                        <input class="form-control" type="text" value="@Model.PublishDate.ToString("g")" disabled />
                        <input asp-for="PublishDate" type="hidden" value="@DateTime.Now" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Blogu Oluştur</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
